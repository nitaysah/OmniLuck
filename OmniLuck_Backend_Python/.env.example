# Environment Configuration Template
# Copy this to .env and fill in your actual API keys

# =============================================================================
# REQUIRED
# =============================================================================

# OpenWeatherMap API Key (Free Tier)
# Get it from: https://openweathermap.org/api
# Free tier: 60 calls/minute, 1,000,000 calls/month
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Firebase Credentials Path
# Download from Firebase Console → Project Settings → Service Accounts
FIREBASE_CREDENTIALS_PATH=../firebase-credentials.json

# =============================================================================
# OPTIONAL
# =============================================================================

# OpenAI API Key (for Cloud LLM - OPTIONAL)
# Get it from: https://platform.openai.com/api-keys
# Leave blank to use local LLM (GPT4All) instead
# OPENAI_API_KEY=your_openai_api_key_here

# Environment (development, staging, production)
ENVIRONMENT=development

# Swiss Ephemeris Data Path (optional, defaults to /usr/share/swisseph)
# EPHEMERIS_PATH=/usr/share/swisseph

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Use Local LLM instead of cloud (true/false)
USE_LOCAL_LLM=true

# Local LLM Model Name (if USE_LOCAL_LLM=true)
LOCAL_LLM_MODEL=orca-mini-3b-gguf2-q4_0.gguf

# ML Model Storage Path
ML_MODEL_PATH=models/luck_predictor.pkl

# Sentiment Analysis Model (HuggingFace)
SENTIMENT_MODEL=distilbert-base-uncased-finetuned-sst-2-english
